@model IEnumerable<WebNews.Models.BinhLuan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin.cshtml";
}

<div class="container-full">
    <h2>BÌNH LUẬN</h2>

    <p>
        @Html.ActionLink("Thêm Mới", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BaiViet.TieuDe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NguoiDung.TenDangNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayBinhLuan)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BaiViet.TieuDe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NguoiDung.TenDangNhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoiDung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayBinhLuan)
                </td>
                <td>
                    <!-- Edit button with icon -->
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-primary text-decoration-none">
                        <i class="bi bi-pencil"></i>
                    </a> |

                    <!-- Details button with icon -->
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info text-decoration-none">
                        <i class="bi bi-eye"></i>
                    </a> |

                    <!-- Delete button with icon -->
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger text-decoration-none">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
    </div>